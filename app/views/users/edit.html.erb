

<div class="container">
 <div class="row">
   
    <h2>User info</h2>
    <form>
    <%= form_with model: @user do |f| %>
    <div class="form group">
    <label foe="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName"%>
    </div>

    <div class="form group">
    <label for="inputImage">Image</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>


    <div class="form group">
    <label foe="inputIntroduction">Introduction</label>
    <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction"%>
    </div>

    <div class="form group">
    <%= f.submit  "Update User" %>
    </div>
  <% end %>
  </form>
 </div>
</div>