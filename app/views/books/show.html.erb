<p id="notice"></p>
<div class="container"> 
  <div class="row">
    
<div class="col-md-3">

<h2>User info</h2>

<div>
  
<p><%= image_tag @books.user.get_profile_image(100,100) %></p>

  <table class="table">
  <tbody><tr></tr>

  <tr>
	  <th>name</th>
	  <th><%= @books.user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @books.user.introduction %></th>
  </tr>
</tbody></table>

<div class="row">
  <%= link_to edit_user_path(@books.user.id), class:"btn btn-outline-secondary btn-block edit_user" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>







<h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>


      <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title,class:"form-control" %>
      </div>
      
      <div class="form-group">
      <label for="book_body">Opinion</label>
      <%= f.text_area :body,class:"form-control" %>
      </div>

      <div class="form-group">
      <%= f.submit "Create Book", class: "btn btn-success"  %>
      </div>


      <% end %>
    </div>
  </div>
    

        <div class="col-md-8 offset-md-1"> 
        <h2>Book detail</h2>
<table class="table">

    <tbody>
      <tr>
        <td><%= link_to @books.user do %><%= image_tag @books.user.get_profile_image(100,100) %><br>
        <%= @books.user.name %>
        <% end %></td>
      
        <td><%= link_to @books.title,book_path(@books.id)  %></td>

      
        <td><%= @books.body %></td>

                
        <% if @books.user == current_user %>
        <td><%= link_to"Edit",edit_book_path(@books.id), class: "btn btn-sm btn-success" %></td>
    
        <td><%= link_to"Destroy",book_path(@books), method: :delete, class:"btn btn-sm btn-danger",data: { confirm: '本当に消しますか？' } %></td>

        <% end %>
      </tr>
    </tbody>



    </table>
   </div>
  </div>
</div>