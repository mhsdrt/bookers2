<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


  <script defer src="https://use.fontawesome.com/releases/v6.1.2/js/all.js" integrity="sha384-11X1bEJVFeFtn94r1jlvSC7tlJkV2VJctorjswdLzqOJ6ZvYBSZQkaQVXG0R4Flt" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  
  
  
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
  <a class="navbar-brand p-1" href = "/">
    <span>Bookers</span>
  </a>
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
      
      <div>
      <%= link_to user_path(current_user.id) ,class: "btn text-light", method: :get do %>
      <i class="fa-solid fa-house-chimney"></i>
      Home
  <% end %>
      </div>
      
      <div>
      <%= link_to "/users" ,class: "btn text-light", method: :get do %>
      <i class="fa-solid fa-users"></i>
      Users
  <% end %>
      </div>
      
      <div>
      <%= link_to "/books" ,class: "btn text-light", method: :get do %>
      <i class="fa-solid fa-book-open"></i>
      Books
  <% end %>
      </div>
      
      <div>
      <%= link_to "/users/sign_out" ,class: "btn text-light", method: :delete do %>
      <i class="fa-solid fa-right-from-bracket"></i>
      Log out
  <% end %>
      </div>
      
      <% else %>
      
      
      <div>
      <%= link_to "/" ,class: "btn text-light", method: :get do %>
      <i class="fa-solid fa-house-chimney"></i>
      Home
  <% end %>
      </div>
      
      <div>
      <%= link_to "/homes/about" ,class: "btn text-light", method: :get do %>
      <i class="fa-solid fa-link"></i>
      about
  <% end %>
      </div>
      
      
      <div>
      <%= link_to "/users/sign_up" ,class: "btn text-light", method: :get do %>
      <i class="fa-solid fa-user-plus"></i>
      Sign up
  <% end %>
      </div>
      
      <div>
      <%= link_to "/users/sign_in" ,class: "btn text-light", method: :get do %>
      <i class="fa-solid fa-right-to-bracket"></i>
      Log in
  <% end %>
      </div>
      
      
      <% end %>
    </ul>
  </div>
  </div>
</nav>
</header>

    <main>


    <%= yield %>

    </main>
</body>
</html>

<footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>